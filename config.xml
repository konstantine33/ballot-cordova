    <icon src="assets/iOS/Resources/icons/Icon-50.png" width="50" height="50" />
    <icon src="assets/iOS/Resources/icons/Icon-100.png" width="100" height="100" />


    <!-- images are determined by width and height. The following are supported -->
    <splash src="assets/iOS/Resources/splash/Default~iphone.png" width="320" height="480"/>
    <splash src="assets/iOS/Resources/splash/Default@2x~iphone_640x960.png" width="640" height="960"/>
