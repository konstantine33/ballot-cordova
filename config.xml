<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.tallyhere" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Tally</name>
  <description>
        Ballot App
    </description>
  <author email="support@tallyhere.com" href="http://tallyhere.com/">
      Tally Support
    </author>
  <content src="index.html"/>
  <access origin="*"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="Orientation" value="portrait" />
  <preference name="AutoHideSplashScreen" value="false" />
  <preference name="ShowSplashScreenSpinner" value="false" />
  
  <platform name="android">
    <preference name="SplashScreen" value="screen" />
    <!-- Set super high delay so that it can removed programatically -->
    <preference name="SplashScreenDelay" value="100000" />
    <icon src="assets/Android/res/drawable-ldpi/icon.png" density="ldpi" />
    <icon src="assets/Android/res/drawable-mdpi/icon.png" density="mdpi" />
    <icon src="assets/Android/res/drawable-hdpi/icon.png" density="hdpi" />
    <icon src="assets/Android/res/drawable-xhdpi/icon.png" density="xhdpi" />
    <icon src="assets/Android/res/drawable-xxhdpi/icon.png" density="xxhdpi" />

    <!-- you can use any density that exists in the Android project -->
    <splash src="assets/Android/res/drawable-ldpi/screen.png" desity="port-hdpi"/>
    <splash src="assets/Android/res/drawable-mdpi/screen.png" desity="port-ldpi"/>
    <splash src="assets/Android/res/drawable-hdpi/screen.png" desity="port-mdpi"/>
    <splash src="assets/Android/res/drawable-xhdpi/screen.png" dnsity="port-xhdpi"/>
    <splash src="assets/Android/res/drawable-xxhdpi/screen.png" ensity="port-xxhdpi"/>
  </platform>

  <platform name="ios">
    <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->

    <!--<icon src="res/ios/icon-60@3x.png" width="180" height="180" />-->

