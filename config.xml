    <icon src="assets/iOS/Resources/icons/Icon-40@2x.png" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon src="assets/iOS/Resources/icons/Icon.png" width="57" height="57" />
    <icon src="assets/iOS/Resources/icons/Icon@2x.png" width="114" height="114" />
